.row
  .col-md-6.col-md-offset-2
    = form_for(:neural_network, as: :neural_network_data, url: neural_networks_path, html: {class: 'form-horizontal'}) do |f|
      %fieldset
        .form-group
          %label.col-xs-3.control-label Typ sieci
          .col-xs-9.text-left
            .radio
              %label#nn
                = radio_button_tag("neural_network_data[network_type]", "ai4r", true)
                Ai4r
            .radio
              %label
                = radio_button_tag("neural_network_data[network_type]", "ruby-fann")
                ruby-fann
          .col-xs-12
            %hr
          %label.col-xs-3.control-label Rodzaj gry
          .col-xs-9.text-left
            .radio
              %label
                = radio_button_tag("neural_network_data[game_type]", "lotto_game", false, data: { href: '/neural_networks/new?game_type=LottoGame' }, class: 'game_type')
                -#<a rel="prev" data-remote="true" href="/neural_networks/new?game_type=LottoGame">LottoGame</a>
                -#= f.radio_button "game_type", "lotto_game"
                LottoGame
            .radio
              %label
                = radio_button_tag("neural_network_data[game_type]", "multi_game", true, data: { href: '/neural_networks/new?game_type=MultiGame'}, class: 'game_type')
                -#= f.radio_button "game_type", "multi_game", :checked => true
                MultiGame
          .col-xs-12
            %hr

      = render 'shared/results_table_form', games: @games
      .col-md-6.col-md-offset-3
        = hidden_field_tag 'neural_network_data[results_list]', '',{ id: 'results_list' }
        = f.submit "Trenuj", class: "btn btn-success btn-lg"
.row
  %hr.col-md-12   