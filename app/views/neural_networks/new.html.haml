.row
  .col-md-3.col-md-offset-2
    = form_for(@neural_network, as: :neural_network_data, html: { class: "form-horizontal" }) do |f|
      = hidden_field_tag 'results_list'
      %fieldset
        .form-group
          %label.col-xs-3.control-label Typ sieci
          .col-xs-9.text-left
            .radio
              %label#nn
                = radio_button_tag("neural_network_data[network_type]", "ai4r", true)
                Ai4r
            .radio
              %label
                = radio_button_tag("neural_network_data[network_type]", "ruby-fann")
                ruby-fann
          .col-xs-12
            %hr
          %label.col-xs-3.control-label Rodzaj gry
          .col-xs-9.text-left
            .radio
              %label
                = radio_button_tag("neural_network_data[game_type]", "lotto_game", true)
                LottoGame
            .radio
              %label
                = radio_button_tag("neural_network_data[game_type]", "multi_game")
                MultiGame
          .col-xs-12
            %hr

= render 'shared/results_table_form', games: @games
%hr
  .col-md-4.col-md-offset-6
    = button_tag(type: "submit", class: "btn btn-success btn-lg") do
      Dalej
.row
  %hr.col-md-12   